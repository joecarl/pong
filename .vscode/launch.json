{
    "configurations": [
		{
			"name": "(gdb) Launch server",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/build/server/pongserver",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}/build/server",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				},
				{
					"description": "Set Disassembly Flavor to Intel",
					"text": "-gdb-set disassembly-flavor intel",
					"ignoreFailures": true
				}
			]
		},
        {
            "name": "(gdb) Launch client",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/client/pong",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/client",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
